<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarStyle="@null"
        >
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@drawable/lm_btn_item_main"
        >
        <TextView 
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            style="@style/TextView"
            android:text="讨论标题"
            />
        <EditText 
            android:id="@+id/lm_discuss_title_update"
            style="@style/EditText_EditUserDataItem"
            android:text=""
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/ic_line_1" />
        
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@drawable/lm_btn_item_main"
        >
        <TextView 
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            style="@style/TextView"
            android:text="讨论内容"
            />
        <EditText 
            android:id="@+id/lm_discuss_content_update"
            style="@style/EditText_EditUserDataItem"
            android:text=""
            />
    </LinearLayout>
        
        
        
    
    <Button 
        android:id="@+id/lm_discuss_update"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/lm_save_userinfo"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="讨论更新"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_height="45dp"
        />
    </LinearLayout>
    </ScrollView>

</LinearLayout>
