<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/btn_userinfo"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:background="@drawable/aa_drawer_user_bg"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical" >

        <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
            android:id="@+id/minimalFour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            bootstrap:bct_image="@drawable/aa_pic_head1"
            bootstrap:bct_minimal="true"
            bootstrap:bct_size="medium" />

        <TextView
            android:id="@+id/tv_username"
            style="@style/TextViewBase"
            android:layout_marginLeft="6dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@drawable/lm_ic_line3" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarStyle="@null" >

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:clickable="false"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/lm_to_meetlist"
                style="@style/LinearLayout.Drawermain" >

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/aa_lm_meetlist" />

                <TextView
                    style="@style/TextView.DrawerMain"
                    android:text="会  议" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lm_to_relation"
                style="@style/LinearLayout.Drawermain" >

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/aa_meet_friend" />

                <TextView
                    style="@style/TextView.DrawerMain"
                    android:text="人  脉" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lm_to_about"
                style="@style/LinearLayout.Drawermain" >

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/aa_lm_about" />

                <TextView
                    style="@style/TextView.DrawerMain"
                    android:text="关  于" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lm_to_logoff"
                style="@style/LinearLayout.Drawermain" >

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/aa_meet_logoff" />

                <TextView
                    style="@style/TextView.DrawerMain"
                    android:text="注  销" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lm_to_logout"
                style="@style/LinearLayout.Drawermain" >

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/aa_lm_meetlist_logout" />

                <TextView
                    style="@style/TextView.DrawerMain"
                    android:text="退  出" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>