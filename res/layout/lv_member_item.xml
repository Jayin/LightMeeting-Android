<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal"
    android:background="@drawable/card_bg"
    >
    
          <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
             android:id="@+id/user_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            bootstrap:bct_image="@drawable/aa_pic_head1"
            bootstrap:bct_minimal="true"
            bootstrap:bct_size="small" />
    
<!--    <ImageView
        android:id="@+id/user_img"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="12dp"
        android:src="@drawable/aa_talker" /> -->
      <LinearLayout 
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          >
          <LinearLayout 
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              >
        	  <TextView 
              android:id="@+id/tv_username"
              android:layout_marginTop="8dp"
              style="@style/TextView"
              android:text="代码家"
              />
       		<TextView 
              android:id="@+id/tv_signup"
              style="@style/TextView"
              android:layout_marginLeft="8dp"
              android:textSize="14sp"
              android:layout_marginTop="8dp"
              android:text="美女"
              />
          </LinearLayout>
          <LinearLayout 
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              >
          <TextView 
              android:id="@+id/tv_usercompany"
              style="@style/TextView"
              android:layout_marginTop="8dp"
              android:textColor="@color/lm_grey_lv_three"
              android:textSize="15sp"
              android:text="北京"
              />
                <TextView 
                    android:layout_marginLeft="8dp"
              android:id="@+id/tv_userposition"
              style="@style/TextView"
              android:layout_marginTop="8dp"
              android:textSize="15sp"
              android:textColor="@color/lm_grey_lv_three"
              android:text="百度"
              />
          </LinearLayout>
      </LinearLayout>

</LinearLayout>
