<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
           <LinearLayout 
              android:clickable="true"
              android:id="@+id/lm_meeting_dateitem"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@drawable/lm_btn_item_main"
        >
        <TextView 
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            style="@style/TextView"
            android:text="时间:"
            />
      <TextView 
          android:id="@+id/lm_meeting_time"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            style="@style/TextView"
            android:text="2014-5-6"
            />
    </LinearLayout>
              <Button 
        android:id="@+id/lm_meeting_select_date"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/lm_save_userinfo"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="选择会议日期"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_height="45dp"
        />
                        <Button 
        android:id="@+id/lm_meeting_select_time"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/lm_save_userinfo"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="选择会议时间"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_height="45dp"
        />
    
                  <LinearLayout 
                      android:layout_marginTop="10dp"
              android:clickable="true"
              android:id="@+id/lm_meeting_dateitem"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@drawable/lm_btn_item_main"
        >
        <TextView 
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            style="@style/TextView"
            android:text="更新时间为:"
            />
      <TextView 
          android:id="@+id/lm_meeting_update_time"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            style="@style/TextView"
            android:text="2014-5-6"
            />
    </LinearLayout>
               <Button 
        android:id="@+id/lm_meeting_confirm"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/lm_save_userinfo"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="确定更新"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_height="45dp"
        />
    

</LinearLayout>
