<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarStyle="@null"
        >
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
               <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@drawable/lm_btn_item_main"
        >
        <TextView 
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            style="@style/TextView"
            android:text="会议名称:"
            />
        <EditText 
            android:id="@+id/lm_meeting_title"
            style="@style/EditText_EditUserDataItem"
            android:text=""
            />
    </LinearLayout>
     <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/ic_line_1" />
     <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@drawable/lm_btn_item_main"
        >
        <TextView 
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            style="@style/TextView"
            android:text="会议地点:"
            />
        <EditText 
            android:id="@+id/lm_meeting_address"
            style="@style/EditText_EditUserDataItem"
            android:text=""
            />
    </LinearLayout>
     <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/ic_line_1" />
          <LinearLayout 
              android:clickable="true"
              android:id="@+id/lm_meeting_starttime_item"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@drawable/lm_btn_item_main"
        >
        <TextView 
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            style="@style/TextView"
            android:text="开始时间:"
            />
      <TextView 
          android:id="@+id/lm_meeting_starttime"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            style="@style/TextView"
            android:text="2014-5-6"
            />
    </LinearLayout>
     <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/ic_line_1" />
                    <LinearLayout 
                        android:clickable="true"
                        android:id="@+id/lm_meeting_endtime_item"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@drawable/lm_btn_item_main"
        >
        <TextView 
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            style="@style/TextView"
            android:text="结束时间:"
            />
      <TextView 
          android:id="@+id/lm_meeting_endtime"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            style="@style/TextView"
            android:text="2014-5-6"
            />
    </LinearLayout>
     <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/ic_line_1" />
                    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@drawable/lm_btn_item_main"
        >
        <TextView 
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            style="@style/TextView"
            android:text="会议简介:"
            />
        <EditText 
            android:id="@+id/lm_meeting_intro"
            style="@style/EditText_EditUserDataItem"
            android:text=""
            />
    </LinearLayout>
     <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/ic_line_1" />
     
        <Button 
        android:id="@+id/lm_meeting_update"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/lm_save_userinfo"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="更新会议"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_height="45dp"
        />
     
     </LinearLayout>
        
    </ScrollView>
    

</LinearLayout>
