<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
     
    
       <android.support.v4.widget.SwipeRefreshLayout 
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="vertical" >
        
       <ListView
           android:layout_margin="10dp" 
           android:id="@+id/option_lv"
           android:listSelector="@android:color/transparent"
           android:layout_width = "match_parent"
           android:layout_height = "50dp"
           android:divider="@null"
           ></ListView>
           
  </android.support.v4.widget.SwipeRefreshLayout>
  
       
       <LinearLayout 
           android:layout_marginTop="20dp"
         android:clickable="true"
       android:id="@+id/lm_meeting_endtime_item"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@drawable/lm_btn_item_main"
        >
        <TextView 
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            style="@style/TextView"
            android:text="你选择的选项是:"
            />
      <TextView 
          android:id="@+id/option_select"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            style="@style/TextView"
            android:text="2014-5-6"
            />
    </LinearLayout>
       
	<Button 
        android:id="@+id/vote_confirm"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/lm_save_userinfo"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:text="确认投票"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_height="45dp"
        />
  
       

</LinearLayout>
