<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:paddingRight="8dp"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:orientation="horizontal" >
    
    <ImageView 
        android:id="@+id/chat_person_headershot"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/aa_talker"
        />
    
       <LinearLayout 
           android:layout_width="0dp"
           android:layout_weight="1"
       android:layout_margin="10dp"
        android:layout_height="wrap_content"
       android:background="@drawable/lm_message_card_bg"
       android:orientation="vertical"
        >
        <TextView 
            style="@style/TextView"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/comment_author"
            android:text="真练"
            />
        <View 
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/ic_line_1"
            />
        <TextView 
            android:layout_margin="10dp"
            android:id="@+id/discuss_comment"
            style="@style/TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="就卡死见到剑氨基酸到静安寺经典款拉伸件到"
            />
    </LinearLayout>
     
</LinearLayout>
